@using YazılımOrg15Eylul_ETicaret.ViewModels
@model List<MyOrdersViewModel>
@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<!-- wishlist area start  -->
<div class="wishlist-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 ">
                <div class="cart-wrapper table-responsive">
                    <table class="shop_table cart ">
                        <thead>
                            <tr>
                                <th class="product-name">SİPARİŞ NO</th>
                                <th colspan="2" class="product-name">ÜRÜN</th>
                                <th class="product-name">TARİH</th>
                                <th class="product-name">ADET</th>
                                <th class="product-name">FİYAT</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {
                                <tr class="cart_item">


                                    <td class="product-name">
                                        @item.OrderGroupGUID
                                    </td>

                                    <td class="product-thumbnail">
                                        <a href="/Home/Details/@item.ProductID">
                                            <img style="height:50px" alt="04" class="attachment-shop_thumbnail wp-post-image" src="~/resimler/@item.PhotoPath">
                                        </a>
                                    </td>

                                    <td class="product-name">
                                        <a href="/Home/Details/@item.ProductID">
                                           @item.ProductName
                                        </a>
                                    </td>

                                    <td class="product-name">
                                        @item.OrderDate
                                    </td>

                                    <td class="product-name">
                                        @item.Quantity
                                    </td>

                                    <td class="product-name">
                                        @string.Format("{0:#,##0,00}", item.UnitPrice) TL
                                    </td>




                                </tr>
                            }


                         
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- wishlist area end  -->