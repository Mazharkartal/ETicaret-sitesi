@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "Markalar Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        <p>
            <a asp-action="SupplierCreate" asp-controller="Admin" class="btn btn-success">
                YENİ MARKA
            </a>
        </p>



        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>MARKA LİSTESİ
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>

            @*  <span class="label label-sm label-success"> Aktif </span> *@
            @*  <span class="label label-sm label-danger"> Deaktif </span> *@


            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-hover">
                        <thead>
                            <tr style="background-color:gray; color:white">
                                <th>
                                    @Html.DisplayNameFor(model => model.SupplierID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BrandName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhotoPath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Active)
                                </th>

                                <th>
                                </th>
                                <th>
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => item.SupplierID)
                                    </td>
                                    <td>
                                        <span>
                                            @Html.DisplayFor(model => item.BrandName)
                                        </span>
                                    </td>

                                    <td>
                                        <img src="~/resimler/@item.PhotoPath" height="35px" width="60px"/>
                                    </td>


                                  
                                    @if (item.Active == true)
                                    {
                                        <td>
                                            <span class="label label-md label-success"> Aktif </span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="label label-sm label-danger"> Deaktif </span>
                                        </td>
                                    }

                                    <td>
                                        <a asp-action="SupplierEdit" asp-route-id="@item.SupplierID" class="btn btn-primary">
                                            DÜZELT
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="SupplierDetails" asp-route-id="@item.SupplierID" class="btn btn-info">
                                            DETAY
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="SupplierDelete" asp-route-id="@item.SupplierID" class="btn btn-danger">
                                            SİL
                                        </a>
                                    </td>
                                </tr>




                            }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
                                        <!-- END SAMPLE TABLE PORTLET-->
        </div>
    </div>