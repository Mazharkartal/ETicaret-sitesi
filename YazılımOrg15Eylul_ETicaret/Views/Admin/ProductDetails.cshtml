@using YazılımOrg15Eylul_ETicaret.Data
@model Product
@{
    ViewData["Title"] = "Ürün  Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Yazilima15EylulETicaretContext context = new();
}

<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="row">
    <div class="col-md-2"> </div>
    <div class="col-md-8">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i> <span style="background-color:red; color:white;">@ViewBag.product</span> ÜRÜN DETAY
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body flip-scroll">
                <table class="table table-bordered table-striped table-condensed flip-content">
                    <thead class="flip-content">
                        <tr>
                            <th width="20%">
                                Key
                            </th>
                            <th>
                                Value
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ProductID)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ProductID)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ProductName)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.UnitPrice)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.CategoryID)
                            </td>
                            <td>
                                @{
                                    string? categoryName =
                                    context.Categories
                                    .FirstOrDefault(c =>
                                    c.CategoryID == Model.CategoryID)?
                                    .CategoryName;

                                    @categoryName
                                }
                            </td>

                        </tr>


                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.SupplierID)
                            </td>
                            <td>
                                @{
                                    string? brandName =
                                    context.Suppliers
                                    .FirstOrDefault(s =>s
                                    .SupplierID   == Model.SupplierID)?
                                    .BrandName;

                                    @brandName
                                }
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Stock)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Stock)
                            </td>

                        </tr>


                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Discount)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.StatusID)
                            </td>
                            <td>
                                @{
                                    string? statusName =
                                    context.Statuses
                                    .FirstOrDefault(s =>
                                    s.StatusID == Model.StatusID)?
                                    .StatusName;

                                    @statusName
                                }
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Keywords)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Keywords)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Kdv)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Kdv)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Related)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Related)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Notes)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Notes)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.AddDate)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.AddDate)
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.PhotoPath)
                            </td>
                            <td>
                                <img src="~/resimler/@Model.PhotoPath" alt=""  style="height: 100px; width:100px" />
                            </td>

                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Active)
                            </td>
                            @if (Model.Active == true)
                            {
                                <td>

                                    <span class="label label-md label-success"> Aktif </span>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="label label-sm label-danger"> Deaktif </span>
                                </td>
                            }

                        </tr>
                       
                    </tbody>
                </table>
                <div class="form-actions right1">
                    <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- END SAMPLE TABLE PORTLET-->