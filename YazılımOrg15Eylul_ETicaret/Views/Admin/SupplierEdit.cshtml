@model Supplier
@{
    ViewData["Title"] = "Markalar Düzenleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> MARKA GÜNCELLEME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/SupplierEdit" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>


                    <div class="form-body">
                      

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="BrandName"></label>
                            <div class="col-md-9">
                                <input asp-for="BrandName" class="form-control input-lg" placeholder="Marka Adı"
                                       required maxlength="50" />
                            </div>
                            <span asp-validation-for="BrandName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="PhotoPath"></label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg"  />
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Active"></label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                    </div>

                    <input type="hidden" asp-for="SupplierID" />

                    <div class="form-actions right1">
                        <a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>
                        <input type="submit" value="GÜNCELLE" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- END SAMPLE FORM PORTLET-->