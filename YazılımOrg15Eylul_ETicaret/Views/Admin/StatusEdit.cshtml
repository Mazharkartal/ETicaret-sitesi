@model Status
@{
    ViewData["Title"] = "Durum Düzenleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> DURUM GÜNCELLEME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/StatusEdit" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>


                    <div class="form-body">


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="StatusName"></label>
                            <div class="col-md-9">
                                <input asp-for="StatusName" class="form-control input-lg" placeholder="Marka Adı"
                                       required maxlength="50" />
                            </div>
                            <span asp-validation-for="StatusName" class="text-danger"></span>
                        </div>

                      
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Active"></label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                    </div>

                    <input type="hidden" asp-for="StatusID" />

                    <div class="form-actions right1">
                        <a asp-action="StatusIndex" class="btn btn-primary">DURUM LİSTESİ</a>
                        <input type="submit" value="GÜNCELLE" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- END SAMPLE FORM PORTLET-->