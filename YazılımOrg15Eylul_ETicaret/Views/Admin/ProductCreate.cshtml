@model Product 
@{
    ViewData["Title"] = "Ürün Ekleme Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> ÜRÜN GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/ProductCreate" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>


                    <div class="form-body">


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="ProductName"></label>
                            <div class="col-md-9">
                                <input asp-for="ProductName" class="form-control input-lg" placeholder="Ürün Adı"
                                       required maxlength="100" />
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="UnitPrice"></label>
                            <div class="col-md-9">
                                <input asp-for="UnitPrice" class="form-control input-lg" placeholder="Ürün Fiyatı"
                                       required/>
                            </div>
                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">Kategori Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("CategoryID",
                                         (IEnumerable<SelectListItem>?)ViewData["categoriList"],
                                         "seçiniz",
                                         new
                                         {
                                             @class = "form-control input-lg",
                                             @required = "required"
                                         })
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">Marka Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("SupplierID",
                                         (IEnumerable<SelectListItem>?)ViewData["suppliersList"],
                                         "seçiniz",
                                         new
                                         {
                                             @class = "form-control input-lg",
                                             @required = "required"
                                         })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Stock"></label>
                            <div class="col-md-9">
                                <input asp-for="Stock" class="form-control input-lg" placeholder="Stok"
                                       required />
                            </div>
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Discount"></label>
                            <div class="col-md-9">
                                <input asp-for="Discount" class="form-control input-lg" placeholder="İndirim"
                                       required />
                            </div>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">Durum Seçiniz</label>
                            <div class="col-md-9">
                                @Html.DropDownList("StatusID",
                                         (IEnumerable<SelectListItem>?)ViewData["statusesList"],
                                         "seçiniz",
                                         new
                                         {
                                             @class = "form-control input-lg", 
                                             @required = "required"
                                         }

                                         )
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Keywords"></label>
                            <div class="col-md-9">
                                <input asp-for="Keywords" class="form-control input-lg" placeholder="Anahtar Kelimeler"
                                       required />
                            </div>
                            <span asp-validation-for="Keywords" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Kdv"></label>
                            <div class="col-md-9">
                                <input asp-for="Kdv" class="form-control input-lg" placeholder="Kdv Oranı"
                                       required />
                            </div>
                            <span asp-validation-for="Kdv" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Related"></label>
                            <div class="col-md-9">
                                <input asp-for="Related" class="form-control input-lg" placeholder="Buna Bakanlar"
                                       required />
                            </div>
                            <span asp-validation-for="Related" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Notes"></label>
                            <div class="col-md-9">
                                <input asp-for="Notes" class="form-control input-lg" placeholder="Ürün açıklaması"/>
                            </div>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="PhotoPath"></label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg" required />
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Active"></label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                    </div>
                    <div class="form-actions right1">
                        <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
                        <input type="submit" value="KAYDET" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- END SAMPLE FORM PORTLET-->