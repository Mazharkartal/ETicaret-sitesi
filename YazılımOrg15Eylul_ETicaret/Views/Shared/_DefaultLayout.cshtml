    @RenderSection("Scripts", required: false);

    <script>
        $(document).on('click','.add-to-cart', function() {
            var productId =$(this).data('product-id');

            if(productId != null)
            {

            $.ajax({
                url: '/Home/AddToCart',
                type: 'POST',
                data: { id: productId},
                success: function(response){
                   if (response.success){
                     $('#cart-summary-container').load('/Home/CartSummary');

                             toastr.options = {
          "closeButton": true,
          "debug": false,
          "positionClass": "toast-top-left",
          "onclick": null,
          "showDuration": "1000",
          "hideDuration": "1000",
          "timeOut": "5000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }

                     if(response.message == "Ürün Sepete Eklendi")
                     {
                        toastr.success('Ürün Sepete Eklendi','ETicaret')

                     }
                     else
                     {
                          toastr.warning('Ürün Sepetinizde Zaten Var','ETicaret')
                     }

                    // $('#cart-notification').addClass('show').removeClass('hide');

                    // setTimeout( function(){
                    //   $('#cart-notification').addClass('hide').removeClass('show');
                    // }, 3000 );


                      $('#cart-notification').text(response.message);
                   }

                },
               Error:function(){
                   alert("Ürün sepete eklenirken bir sorun oluştu");
               }
            });

            }


        });

    </script>


